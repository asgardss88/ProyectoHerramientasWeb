<h1>Notification</h1>
<br/>
<%@empty = 0%>

<%if !@notificaciones1.empty?%>
<table class="table table-bordered table-hover table-striped table-condensed">
  <thead>
    <tr>
      <th>Answers to your questions while you were gone</th>
    </tr>
  </thead>

  <tbody>
    <% @notificaciones1.each do |notif| %>
      <tr>
        <td><%= link_to notif.user.email, user_path(notif.user)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<%@empty =1%>
<%end%>

<%if !@notificaciones2.empty?%>
<table class="table table-bordered table-hover table-striped table-condensed">
  <thead>
    <tr>
      <th>Comments made to your questions while you were gone</th>
    </tr>
  </thead>

  <tbody>
    <% @notificaciones2.each do |notif| %>
      <tr>
        <td><%= link_to notif.user.email, user_path(notif.user)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</br>
<%@empty =1%>
<%end%>

<%if !@notificaciones3.empty?%>
<table class="table table-bordered table-hover table-striped table-condensed">
  <thead>
    <tr>
      <th>Votes made to your questions while you were gone</th>
    </tr>
  </thead>

  <tbody>
    <% @notificaciones3.each do |notif| %>
      <tr>
        <td><%= link_to notif.user.email, user_path(notif.user)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</br>
<%@empty =1%>
<%end%>

<%if @empty==0%>
    No notifications yet.
    <br>
<%end%>

<br/>

