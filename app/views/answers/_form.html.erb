
<%= form_for(@answer, url:  question_answers_path(@answer.question_id), method: :post) do |f| %>

<% if @answer.errors.any? %>
    <div id="error_explanation">
      <% emsg=pluralize(@answer.errors.count, "error")+" prohibited this answer from being saved:"%>
      <%= content_tag :div, emsg, :class => "alert alert-error" %>
        <ul>
          <% @answer.errors.full_messages.each do |msg| %>
            <%= content_tag :div, msg, :class => "alert alert-error" %>
          <% end %>
        </ul>
      </div>
<%end%> 

  <div>
    <%=f.label :response_content%>
    <%=f.text_area :content%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
